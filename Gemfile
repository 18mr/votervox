source 'https://rubygems.org'
ruby '2.2.1'

gem 'rails', '4.2.5'
gem 'rails_12factor', group: :production

# PostgreSQL database
gem 'pg'

# Make requests to external APIs
gem 'rest-client'
gem 'nokogiri'

gem 'jquery-rails'
gem 'jquery-ui-rails'

group :test do
  gem 'database_cleaner'
  gem 'capybara'
  gem 'rspec-rails'
  gem 'shoulda-matchers'
end

# For environment variables
gem 'bundler'
gem 'foreman'


