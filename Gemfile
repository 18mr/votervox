source 'https://rubygems.org'
ruby '2.2.1'

gem 'rails', '4.2.5'
gem 'rails_12factor', group: :production

# PostgreSQL database
gem 'pg'

# Volunteer/admin authentication
gem 'devise'

# Visit tracking
gem 'ahoy_matey'

# File uploads
gem 'paperclip'
gem 'aws-sdk', '~> 2.3'

# Make requests to external APIs
gem 'rest-client'
gem 'nokogiri'

gem 'jquery-rails'
gem 'jquery-ui-rails'

group :test do
  gem 'database_cleaner'
  gem 'capybara'
  gem 'rspec-rails'
  gem 'shoulda-matchers'
end

# For environment variables
gem 'bundler'
gem 'foreman'

# For Sass & Compass
gem 'sass-rails'
gem 'compass-rails'
gem 'font-awesome-rails'


