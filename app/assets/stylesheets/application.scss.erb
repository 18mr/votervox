 @import "compass/reset";


html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, main, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video, input, select, textarea {

	box-sizing: border-box;
}

/* Fonts */
@import url(https://fonts.googleapis.com/css?family=Karla:400,700);

/* Colors */
$pink: #e92484;
$darkpink: #9D044E;
$green: #8BC63E;
$lightgrey: #f7f7f7;
$darkgrey: #4a4a4a;
$white: #fff;
$grey: #313131;
$grey1: #848484;
$footergrey: #6A6A6A;

body {
	background: #fff;
	font-family: 'Karla', sans-serif;
}


/***********************
 General Stylings 
 ************************/
 h1, h2, h3 {
 	font-weight: 700;
 	text-align: center;
 	letter-spacing: 1px;
 	line-height: 1.3em;
 	color: $grey;
 }

 h1 {
 	font-size: 28px;
 	line-height: 32px;
 	margin-bottom: 15px;
 }
 h2 {
 	font-size: 24px;
 	margin-bottom: 28px;
 }
 h3 {
 	font-size: 16px;
 	margin-bottom: 20px;
 }
 p {
 	line-height: 26px;
 	margin-bottom: 20px;
 }

 a, input[type="submit"] {
 	-webkit-appearance:none;
 	text-decoration: none;
 	color: $darkgrey;
 	:hover {
 		cursor: pointer;
 		pointer-events: default;
 	}
 	&.current {
 		color: $darkgrey !important;
 		font-weight: 700;
 	}
 	&.current:hover {
 		pointer-events: none;
 		cursor: default;
 	}
 }
 blockquote {
 	color: $pink;
 	text-align: center;
 	margin: 30px auto;
 	font-size: 24px;
 	line-height: 30px;
 }
 input, select, textarea {
 	margin-bottom: 30px;
 	border: 1px solid $grey;
 	border-radius: 6px;
 	font-size: 20px;
 	display: block;
 	width: 100%;
 	background-color: #fff;
 	padding: 5px 10px;
 	height: 40px;
 	font-size: 15px;
 	font-family: 'Karla';
 }

 fieldset {
 	margin-bottom: 25px;
 }

 input::-webkit-input-placeholder, input:-moz-placeholder, input::-moz-placeholder, input:-ms-input-placeholder, input::placeholder, input:placeholder-shown {
 	font-family: 'Karla';
 	font-size: 40px;
 }

 input[type=password] {
 	margin-bottom: 10px;
 }
 select {
 	color: $darkgrey;
 }
 textarea {
 	padding: 10px;
 	width: 100%;
 	font-size: 14px;
 	min-height: 80px;
 }
 input[type="checkbox"] {
 	display: inline-block;
 	width: auto;
 	margin-right: 10px;
 	margin-left: 0px;
 	color: $darkgrey;
 	height: auto;
 }
 label, legend {
 	margin-bottom: 5px;
 	font-size: 14px;
 	line-height: 20px;
 	display: block;
 	color: $darkgrey;
 	line-height: 1.2em;
 	text-align: left;
 }
 select {
	-webkit-appearance: none; //hide the current arrows
	/* make arrow and background */
	background:
	linear-gradient(45deg, transparent 50%, #000 50%),
	linear-gradient(135deg, #000 50%, transparent 50%),
	linear-gradient(to right, #fff, #fff);
	background-position:
	calc(100% - 21px) calc(.7em + 2px),
	calc(100% - 16px) calc(.7em + 2px),
	100% 0;
	background-size:
	5px 5px,
	5px 5px,
	2.5em 2.5em;
	background-repeat: no-repeat;
}
button, input.button, a.button {
	background-color: $pink;
	height: 50px;
	display: block;
	width: 100%;
	border: none;
	box-shadow: 0px 2px 0px $darkpink;
	color: #fff;
	border-radius: 6px;
	font-size: 18px;
	height: 40px;
	width: 300px;
	margin-bottom: 14px;
	font-family: 'Karla';
	&:hover {
		cursor: pointer;
	}
}
a.button {
	text-align: center;
	padding-top: 11px;
	font-size: 18px;
	height: 40px;
	width: 300px;
	margin-bottom: 14px;
}
button.btn-outline, input.btn-outline, a.btn-outline {
	background-color: #fff;
	border: 1px solid $pink;
	box-shadow: none;
	color: $pink;
	height: 40px;
	padding: 10px 3px;
	cursor: pointer;
}

.logout {
	border-bottom: 2px solid $grey !important;
}

strong {
	font-weight: 700;
}
hr {
	width: 40px;
	border-width: 1px;
	background-color: black;
	border-style: solid;
	margin-bottom: 15px;
}
.italics, em {
	font-style: italic;
}
.show {
	display: block !important;
}
.hide {
	display: none ;
}
.small {
	font-size: 10px;
}
.float-left {
	float: left;
}
.float-right {
	float: right;
}

.float-right {
	float: right;
}
.clear-fix {
	clear: both;
}
div.notice {
	text-align: center;
	background-color: $lightgrey;
	color: $darkgrey;
	font-size: 28px;
	margin: 0 auto;
	width: auto;
	font-weight: 700;
}
div.alert {
	text-align: center;
    width: auto;
    font-size: 20px;
    color: $darkpink;
    font-weight: 700;
}
.tooltip {
	border: 5px solid #cd1076;
	padding: 18px;
	color: #696969;
	width: 90%;
	margin: 0 auto;
	top: -180px;
	margin-bottom: -126px; 
	position: relative;
	background-color: #fff;
	font-size: 15px;
	line-height: 1.4em;
	z-index: 1000;
	background: $white;
	&.hide {
		visibility: hidden;
		display: block;
	}
}
.tooltip-hover {
	position: relative;
	top: -3px;
	margin-left: 5px;
	color: #aaa;
	background-color: #fff;
	border: 3px solid #aaa;
	border-radius: 50%;
	height: 20px;
	width: 20px;
	text-align: center;
	display: inline-block;
}
/* ICONS */

.menu-icon {
	color: #e92484;
	border-radius: 10px;
	border: 2px solid #e92484;
	float: right;
	height: 30px;
	width: 30px;
	margin: 2px 10px 10px 0px;
	&:after {
		display: inline-block;
		content: "\2261";
		font-size: 33px;
		padding-left: 5px;
		margin-top: -3px;
		width: 17px;
	}
	&.opened {
		&:after{
			content: "\00d7"; /* This will render the 'X' */
			padding-left: 4px;
			margin-top: -4px;
			font-size: 30px;
		}
	}
}
.close-icon {
	height: 0px;
	width: 40px;
	margin: 0px 10px 10px 0px;
    font-size: 31px;
    float: right;
	&:after{
		content: "\00d7"; /* This will render the 'X' */
		padding-left: 7px;
	}
}

