<aside class="tablet desktop">

	<a class="brand" href="<%= homepage_path %>">VoterVox</a>

	<div class="voter-dashboard">
		<h1><%= t( 'voter_dashboard.menu.dashboard') %></h1>
	</div><!--.voter-dashboard-->
	
	<% if @voter.present? && @voter.active? %>

	<a href="<%= @voter.home_url%>" class="button <%= at_voter_home? ? "selected" : "pink" %>" ><%= t('voter_dashboard.menu.translator') %></a>

	<% else %>

	<a href="<%= new_voter_path %>" class="button pink" ><%= t('voter_registration.title') %></a>

	<% end %>

	<a href="<%= documents_path %>" class="button <%= at_documents_index? ? "selected" : "pink" %>"><%= t('voter_dashboard.menu.resources')%></a>

	<a class="button <%= at_feedback? ? "selected" : "pink" %>"  href="<%= feedback_path %>">
		<%= t('voter_dashboard.menu.feedback')%>
	</a>

	<%= render "/shared/share_with_community" %>

</aside><!--.tablet.desktop-->