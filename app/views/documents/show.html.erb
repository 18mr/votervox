<main class="dashboard">

	<div class="wrapper">
	
		<section class="message resource-specific">

			<div class="wrapper">

				<h1><%= @document.name %></h1>
				<% if admin_signed_in? %>
				<div class="actions delete-button">
					<%= link_to 'Delete', document_path(@document), method: :delete, data: { confirm: 'Are you sure?' } %>
				</div>
				<div class="clear-fix"></div>
				<% end %>
				<div class="clear-fix"></div>
				<div class="language">Translated Language:<strong><%= @document.translated_language %></strong></div>
				<div class="details">
					<p>Submitted by: <%= @document.submitter.firstname %> <%= @document.submitter.lastname[0] %>.</p>
					<p>Submitted on: <%= @document.created_at.strftime("%B %-d, %Y") %></p>
				</div>

			</div><!--.wrapper-->

		</section><!--.message-->

		<section class="contents document-show">
			<div class="wrapper">
				<!--.pdf or word or other document rendering-->

				<% if @document.file.present? %>
				<iframe src="https://docs.google.com/gview?url=<%= @document.file.url %>&embedded=true" style="width: 100%; height:600px" frameborder="0"></iframe>
				<% else %>
				<p>Sorry, this document appears to be missing!</p>
				<% end %>

			</div>

		</section><!--.contents-->

	</div><!--.wrapper-->

</main><!--.dashboard-->
