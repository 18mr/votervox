<main class="dashboard">
	<div class="wrapper">
		<section class="match-results">
			<div class="wrapper">
				<h1>VoterVOX Voters</h1>
				<ul class="status">
					<li><a class="unmatched-voters" href="#">Unmatched Voters</a></li>
					<li><a class="matched-voters" href="#">Matched Voters</a></li>
					<li><a class="completed-matches" href="#">Completed Matches - Voters Helped</a></li>
					<div class="clear-fix"></div>
				</ul>

				<% @unmatched.each do |voter| %>

				<div class="voter-box unmatched">
					<div class="voter-info">
						<h2><%= voter.firstname %> <%= voter.lastname %>, </h2>
						<hr/>
						<ul>
							<li><strong>Email/Phone:</strong> <%= voter.contact %></li>
							<li><strong>First Time Voter: </strong><%= voter.first_time_voter %></li>
							<li><strong>City:</strong> <%= voter.city %></li>
							<li><strong>Languages:</strong> <%= voter.languages.join(', ') %></li>
							<li><strong>English Proficiency:</strong> <%= voter.english_comfort %> </li>
						</ul>
					</div><!--.voter-info-->
					
				</div><!--.voter-box-->

				<% end %>

				<% if @unmatched.length == 0 %>

				<div class="voter-box unmatched">
					<h2>No Unmatched Voters</h2>
				</div>

				<% end %>

				<% @matched.each do |voter| %>

				<div class="voter-box matched">
					<div class="voter-info">
						<h2><%= voter.firstname %> <%= voter.lastname %>, </h2>
						<hr/>
						<ul>
							<li><strong>Email/Phone:</strong> <%= voter.contact %></li>
							<li><strong>First Time Voter: </strong><%= voter.first_time_voter %></li>
							<li><strong>City:</strong> <%= voter.city %></li>
							<li><strong>Languages:</strong> <%= voter.languages.join(', ') %></li>
							<li><strong>English Proficiency:</strong> <%= voter.english_comfort %> </li>
						</ul>
					</div><!--.voter-info-->
					
				</div><!--.voter-box-->

				<% end %>

				<% if @matched.length == 0 %>

				<div class="voter-box matched">
					<h2>No Matched Voters</h2>
				</div>

				<% end %>

				<% @completed.each do |voter| %>

				<div class="voter-box completed">
					<div class="voter-info">
						<h2><%= voter.firstname %> <%= voter.lastname %>, </h2>
						<hr/>
						<ul>
							<li><strong>Email/Phone:</strong> <%= voter.contact %></li>
							<li><strong>First Time Voter: </strong><%= voter.first_time_voter %></li>
							<li><strong>City:</strong> <%= voter.city %></li>
							<li><strong>Languages:</strong> <%= voter.languages.join(', ') %></li>
							<li><strong>English Proficiency:</strong> <%= voter.english_comfort %> </li>
						</ul>
					</div><!--.voter-info-->
					
				</div><!--.voter-box-->

				<% end %>

				<% if @completed.length == 0 %>

				<div class="voter-box unmatched">
					<h2>No Completed Matches</h2>
				</div>

				<% end %>

			</div><!--.wrapper-->

		</section><!--.match-results-->

	</div><!--.wrapper-->
</main>
